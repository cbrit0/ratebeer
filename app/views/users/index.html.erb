<div class="container my-4">
  <h1 class="text-center mb-4">Users</h1>

  <div id="users" class="list-group">
    <% @users.each do |user| %>
      <div class="list-group-item d-flex flex-column">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="mb-1">
            <%= link_to user.username, user, class: "text-decoration-none" %>
          </h5>
          <% if user.frozen? %>
            <span class="badge bg-danger">Account Closed</span>
          <% end %>
        </div>
        <p class="mb-0 text-muted">
          Has made <strong><%= user.ratings.size %></strong> ratings, average rating: 
          <strong><%= user.average_rating %></strong>
        </p>
      </div>
    <% end %>
  </div>
</div>
