<div class="container my-5">
  <h1 class="text-center mb-4">Breweries</h1>

  <div class="mb-5">
    <h2 class="text-success">Active Breweries</h2>
    <p class="text-muted">Number of active breweries: <%= @active_breweries.count %></p>

    <div id="breweries" class="row gy-4">
      <% @active_breweries.each do |brewery| %>
        <div id="<%= dom_id brewery %>" class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h4 class="card-title">
                <%= link_to brewery.name, brewery, class: "text-decoration-none" %>
              </h4>
              <p class="text-muted mb-0">
                <strong>Year:</strong> <%= brewery.year %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mb-5">
    <h2 class="text-danger">Retired Breweries</h2>
    <p class="text-muted">Number of retired breweries: <%= @retired_breweries.count %></p>

    <div id="retired_breweries" class="row gy-4">
      <% @retired_breweries.each do |brewery| %>
        <div id="<%= dom_id brewery %>" class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h4 class="card-title">
                <%= link_to brewery.name, brewery, class: "text-decoration-none" %>
              </h4>
              <p class="text-muted mb-0">
                <strong>Year:</strong> <%= brewery.year %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "List of beers", beers_path, class: "btn btn-secondary" %>
    <% if current_user %>
      <%= link_to "New brewery", new_brewery_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

