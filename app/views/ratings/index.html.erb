<h2>Ratings</h2>

<div class="row">
  <div class="col-md-4">
    <h3>Best beers</h3>
    <%= render partial: "shared/top_list", locals: { items: @top_beers, title: "Beer" } %>
  </div>
  <div class="col-md-4">
    <h3>Best breweries</h3>
    <%= render partial: "shared/top_list", locals: { items: @top_breweries, title: "Brewery" } %>
  </div>
  <div class="col-md-4">
    <h3>Best styles</h3>
    <%= render partial: "shared/top_list", locals: { items: @top_styles, title: "Style" } %>
  </div>
</div>

<h3>Most active users</h3>
<ul>
  <% @most_active_users.each do |user| %>
    <li><%= user.username %> - <%= user.ratings.count %> ratings</li>
  <% end %>
</ul>

<h3>Recent ratings</h3>
<%= render partial: "shared/recent_ratings", locals: { ratings: @recent_ratings } %>

<%= link_to "New rating", new_rating_path, class: "btn btn-primary mt-3" %>
